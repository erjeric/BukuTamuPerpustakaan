@model IEnumerable<WebApplication1.Models.Pengunjung>
@{
    ViewBag.Title = "Buku Tamu Perpustakaan";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-3 text-primary">📖 Buku Tamu Perpustakaan</h2>

        <form id="formTamu" class="row g-3 mb-4">
            <div class="col-md-5">
                <input type="text" id="nama" class="form-control form-control-lg" placeholder="Nama Pengunjung" required>
            </div>
            <div class="col-md-4">
                <select id="kategori" class="form-select form-select-lg" required>
                    <option value="">Pilih Kategori</option>
                    <option>Siswa</option>
                    <option>Mahasiswa</option>
                    <option>Umum</option>
                    <option>Pegawai</option>
                </select>
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Tambah</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Kategori</th>
                        <th>Tanggal Kunjungan</th>
                    </tr>
                </thead>
                <tbody id="tabelBody">
                    <tr>
                        <td colspan="4" class="text-muted">Belum ada pengunjung tercatat.</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-grid mt-3">
            <button id="resetData" class="btn btn-danger">Reset Semua Data</button>
        </div>
    </div>
</div>

<!-- Script JS di bawah supaya semua elemen HTML sudah ada -->
<script src="~/Scripts/JavaScript.js"></script>
